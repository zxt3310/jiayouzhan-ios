<?xml version="1.0" encoding="UTF-8"?>
<UIView layout="flex:1" attr="bgColor:white">
    <UIView layout="padding:20,alignItems:center" attr="">
        <UILabel name="" layout="" attr="fontSize:16,color:#333333,text:登录"/>
    </UIView>
    <UIView layout="height:35%,justifyContent:center,alignItems:center" attr="">
        <UIView layout="width:30%,aspectRatio:1" attr="bgColor:#1c713d"/>
    </UIView>

    <UIView layout="padding:40" attr="">
        <UIView layout="flexDirection:row,alignItems:center,padding:10" attr="borderWidth:1,borderColor:#c7c7c7">
            <UIImageView layout="height:26,width:18" attr="source:phone"/>
            <UITextField name="_phoneTF" layout="marginLeft:10" attr="fontSize:14,color:black,textAlign:left,placeholder:请输入手机号,text:"/>
        </UIView>

        <UIView layout="flexDirection:row,alignItems:center,marginTop:20,padding:10" attr="borderWidth:1,borderColor:#c7c7c7">
             <UIImageView layout="height:26,width:18" attr="source:pwd"/>
            <UITextField name="_pwdTF" layout="marginLeft:10" attr="fontSize:14,color:black,textAlign:left,placeholder:请输入密码,text:"/>
        </UIView>
        
        <UIView layout="flexDirection:row,justifyContent:center,alignItems:center,marginTop:20" attr="">
            <BEMCheckBox name="_station_ck" layout="width:20,height:20"/>
            <UILabel name="" layout="marginLeft:10" attr="fontSize:14,color:#333333,text:加油站管理员"/>
            <BEMCheckBox name="_engi_ck" layout="marginLeft:20,width:20,height:20"/>
            <UILabel name="" layout="marginLeft:10" attr="fontSize:14,color:#333333,text:维修工程师"/>
        </UIView>
    </UIView>

    <UIView layout="flex:1,justifyContent:center,alignItems:center" attr="">
        <FlexTouchView onPress="login" layout="width:80%,height:50,justifyContent:center,alignItems:center" attr="bgColor:#1c713d">
            <UILabel name="" layout="" attr="fontSize:14,color:white,text:注册"/>
        </FlexTouchView>
    </UIView>
</UIView>
